                <uxap:breadCrumbsLinks/>
                <uxap:navigationBar/>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection showTitle="true" title="GENERAL" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Afiliado" mode="Collapsed">
                        <uxap:blocks>
                            <List mode="SingleSelectMaster" width="100%" headerText="Nombre" footerText="" 
                             backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" visible="true">
                                <infoToolbar>
                                    <Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
                                        <content>
                                            <Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                        </content>
                                    </Toolbar>
                                </infoToolbar>
                                <headerToolbar/>
                                <items>
                                    <StandardListItem title="{DEALER>/d/NAME}" description="Nombre" info="" infoState="None" type="Active" selected="false" visible="true"/>
                                    <StandardListItem title="{DEALER>/d/LASTNAME}" description="Apellidos" info="" infoState="None" type="Active" selected="false" visible="true"/>
                                </items>
                            </List>
                            <List mode="SingleSelectMaster" width="100%" headerText="Teléfono" footerText="" 
