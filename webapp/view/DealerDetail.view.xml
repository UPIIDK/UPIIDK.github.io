                                            <Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                        </content>
                                    </Toolbar>
                                </infoToolbar>
                                <headerToolbar/>
                                <items>
                                    <StandardListItem title="{DEALER>/d/TELEPHONE1}" description="Teléfono principal" info="" infoState="None" type="Active" selected="false" visible="true"/>
                                    <StandardListItem title="{DEALER>/d/TELEPHONE2}" description="Teléfono secundario" info="" infoState="None" type="Active" selected="false" visible="true"/>
                                </items>
                            </List>
                            <List mode="SingleSelectMaster" width="100%" headerText="Email" footerText="" 
                             backgroundDesign="Solid" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" visible="true">
                                <infoToolbar>
                                    <Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
                                        <content>
                                            <Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                        </content>
                                    </Toolbar>
                                </infoToolbar>
                                <headerToolbar/>
                                <items>
                                    <StandardListItem title="{DEALER>/d/EMAIL1}" description="Email principal" info="" infoState="None" type="Active" selected="false" visible="true"/>
                                    <StandardListItem title="{DEALER>/d/EMAIL2}" description="Email secundario" info="" infoState="None" type="Active" selected="false" visible="true"/>
                                </items>
                            </List>
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection showTitle="true" title="CONTACTOS" titleUppercase="true" visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="REPRESENTANTES LEGALES" mode="Collapsed">
                        <uxap:blocks>
                            <Table width="auto" noDataText="{i18n>NoData}" mode="None" showSeparators="All" 
                            items="{SSCONTACT>/d/}" growing="true" growingThreshold="20" growingScrollToLoad="true" class="sapUiResponsiveMargin">
                                <infoToolbar>
                                    <Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
                                        <content>
                                            <Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                        </content>
                                    </Toolbar>
                                </infoToolbar>
                                <headerToolbar>
                                    <OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
                                        <content>
                                            <Title text="({COUNT ROWS})" titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false"/>
                                            <ToolbarSpacer width=""/>
                                            <OverflowToolbarButton text="Sort" type="Transparent" icon="sap-icon://sort" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                                            <OverflowToolbarButton text="Filter" type="Transparent" icon="sap-icon://filter" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
